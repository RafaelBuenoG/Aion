@model List<Curso>

@{
    ViewData["Title"] = "Home Page";
    ViewBag.Subtitulo = "Cursos";
    Layout= "~/Views/Shared/_LayoutAdmin.cshtml";
}

<header>
    <div class="header-title-container pad-left">
        <h1 class="header-title">Cursos j√° cadastrados</h1>
    </div>
    <button class="add-container pad-right btn-modal">
        <img class="add-icon" src="~/img/icons/add.svg" alt="add">
        <span class="add-title">Adicionar</span>
    </button>
</header>
<section class="table-container">
    @if (ViewBag.hasCurso == false)
    {
        <div class="table">
            <span class="msg-table">Nenhum curso cadastrado</span>
        </div>
    }
    else
    {
        <div class="table">
            <div class="table-item">
                @foreach (var cursos in Model)
                {   
                    <button class="table-item-btn" id="course">
                        <label for="course" class="table-item-name">@cursos.Nome</label>
                        <img class="arrow-icon" src="~/img/icons/arrow-down.svg" alt="Mostrar mais">
                    </button>
                    <form asp-action="">
                        <input type="hidden" asp-for="@cursos.Id" name="id"/>
                        <input name="Id" type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                }
            </div>
        </div>
    }
</section>
<section class="modal">
    <div class="modal-container">
        <div class="title-modal-container">
            <h1 class="title-modal">Adicionar Curso</h1>
            <button class="close-modal" id="close-modal-add">
                <img src="~/img/icons/close-rounded.svg" alt="Close">
            </button>
        </div>
        <form method="post" class="form-modal" id="form">
            <div class="field-modal">
                <label for="name">Curso</label>
                <input class="inp-modal" type="text" id="name" name="name" placeholder="Nome do Curso">
                <span class="erro"></span>
            </div>
            <button type="submit" class="btn btn-modal" id="submit">Adicionar</button>
        </form>
    </div>
</section>

@section Scripts{
    <script src="~/js/modal.js"></script>
}