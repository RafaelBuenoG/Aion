@model List<Professor>

@{
    ViewData["Title"] = "Home Page";
    ViewBag.Subtitulo = "Professores";
    Layout= "~/Views/Shared/_LayoutAdmin.cshtml";
}

<header>
    <div class="header-title-container pad-left">
        <h1 class="header-title">Professores cadastrados</h1>
    </div>
    <button class="add-container pad-right btn-modal">
        <img class="add-icon" src="~/img/icons/add.svg" alt="add">
        <span class="add-title">Adicionar</span>
    </button>
</header>
<section class="table-container">
    <div class="table">
        <span class="msg-table hide">Nenhum professor cadastrado</span>
        <div class="teacher-container" id="">
            @foreach (var professores in Model)
            {
                <button class="teacher" id="teacher">
                    <label for="teacher" class="teacher-name">José Gallo Junior @professores.Id</label>
                    <img class="arrow-icon" src="~/img/icons/arrow-down.svg" alt="Mostrar mais">
                </button>
            }
        </div>
    </div>
</section>
<section class="modal">
    <div class="modal-container">
        <div class="title-modal-container">
            <h1 class="title-modal">Adicionar Professor</h1>
            <button class="close-modal">
                <img src="~/img/icons/close-rounded.svg" alt="Close">
            </button>
        </div>
        <form asp-action="Professores" method="post" class="form-modal">
            <div class="field-modal">
                <label for="name">Nome Completo</label>
                <input class="inp-modal" type="text" id="name" name="name" placeholder="Nome">
            </div>
            <div class="field-modal">
                <label for="email">E-mail</label>
                <input class="inp-modal" type="email" id="email" name="email" placeholder="Email">
            </div>
            <div class="field-modal">
                <label for="phone">Telefone</label>
                <input class="inp-modal" type="tel" id="phone" name="phone" placeholder="Telefone">
            </div>
            <div class="field-modal">
                <label for="select-modal" id="label-modal">Matérias</label>
                <input type="text" class="select-modal" id="select-modal" name="subjects" placeholder="Selecione as Matérias" readonly>
                <div class="dropdown-container">
                    <div class="dropdown-select">
                        @foreach (var materia in ViewBag.Materias)
                        {
                            <div class="item-select-container">
                                <input class="check-select" type="checkbox" id="item-select-@materia.Id">
                                <label for="item-select-@materia.Id" class="item-select" id="items-@materia.Id" onmousedown="select(@materia.Id)">@materia.Nome</label>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-modal">Adicionar</button>
        </form>
    </div>
</section>

@section Scripts{
    <script src="~/js/modal.js"></script>
    <script src="~/js/multi-select.js"></script>
}