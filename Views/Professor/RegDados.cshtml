@model IEnumerable<DiaSemana>

@{
    ViewData["Title"] = "Home Page";
    ViewBag.Subtitulo = "Registrar Dados";
    Layout= "~/Views/Shared/_LayoutProfessor.cshtml";
}

<section class="progress-bar-container">
    <div class="progress-bar">
        <div class="progress prog-left done"></div>
        <div class="progress"></div>
        <div class="progress prog-right"></div>
    </div>
</section>
<form method="post" class="section-main">
    <div class="question-container">
        <h1 class="reg-title">Quais dias da semana estão disponíveis<br> para você?</h1>
        <input type="text" class="select-modal-reg" id="select-modal" name="weekDays" placeholder="Selecione os dias" readonly>
        <div class="dropdown-container-reg">
            <div class="dropdown-select-reg">
                @foreach (var dia in Model)
                {
                    <div class="item-select-container">
                        <input class="check-select" type="checkbox" id="item-select-@dia">
                        <label for="item-select-@dia" class="item-select" id="items-week-@dia" onmousedown="selectDay('@dia')">@dia</label>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="btn-container">
        <div class="btn-prev-container">
            <a href="javascript:void(0)" class="btn-prev-a hide">
                <img class="prev-icon" src="../../img/icons/arrow-left.svg" alt="Voltar">
                <span class="btn-prev">Voltar</span>
            </a>
        </div>
        <button type="submit" class="btn btn-medium center">Avançar</button>
    </div>
</form>

@section Scripts{
    <script src="~/js/multi-select-reg.js"></script>
}